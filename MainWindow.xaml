                                                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.2"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.2"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <PointAnimationUsingKeyFrames Storyboard.TargetName="Animation" Storyboard.TargetProperty="(UIElement.RenderTransformOrigin)">
                                                <EasingPointKeyFrame KeyTime="0:0:0" Value="0,0.5"/>
                                                <EasingPointKeyFrame KeyTime="0:0:1" Value="1.0,0.5"/>
                                                <EasingPointKeyFrame KeyTime="0:0:2" Value="0,0.5"/>
                                            </PointAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
